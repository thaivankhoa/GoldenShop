 	<!-- Error message -->
<%= render 'shared/errors', obj: @item %>
<!-- Create Form -->
<div class="row">
	<div class="col-xs-12">
		<!-- Create Form -->		
		<%= form_for(@item, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<!-- Title -->
			<div class="form-group">

				<div class="control-label col-sm-2">		
					<%= f.label :title %>
				</div>

				<div class="col-sm-8">	
					<%= f.text_field :title, class: "form-control", placeholder: "Title of item", autofocus: true %>
				</div>	

			</div>
			<!-- Description input -->
			<div class="form-group">

				<div class="control-label col-sm-2">
					<%= f.label :description %>
				</div>

				<div class="col-sm-8">
					<%= f.text_area :description, class: "form-control", placeholder: "Body of item" %>
				</div>

			</div>
			<!-- Price input -->
			<div class="form-group">

				<div class="control-label col-sm-2">
					<%= f.label :price %>
				</div>

				<div class="col-sm-8">
					<%= f.text_area :price, class: "form-control", placeholder: "Price of item" %>
				</div>

			</div>
			<!-- Quantity in stock input -->
			<div class="form-group">

				<div class="control-label col-sm-2">
					<%= f.label :quantity_stock %>
				</div>

				<div class="col-sm-8">
					<%= f.text_area :quantity_stock, class: "form-control", placeholder: "Quantity of item" %>
				</div>

			</div>
			<!-- Categories Checkbox -->
			<div class="form-group">

				<div class="row">

					<div class="col-sm-offset-2 col-sm-8">

						<%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
							<%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>

						<% end %>
						
					</div>

				</div>

			</div>
			<!-- Image -->
			<% if logged_in? %>
				<div class="form-group">

					<div class="control-label col-sm-2">
						<%= f.label :image %>
					</div>
				
					<div class="col-sm-8">
						<%= f.file_field :image, class: "form-control", placeholder: "Your item imgage..." %>
					</div>
				
				</div>
			<% end %>
			<!-- Submit btn -->
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>		
			</div>
	</div>
</div>

				
		<% end %>
		<div class="col-xs-4 col-sm-offset-4">					
			<%= link_to 'Cancel request and return to items listing', items_path%>
		</div>

	</div>
</div>