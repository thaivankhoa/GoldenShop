<h1 class="custom_h1">Your Order</h1>

<table class="table table-striped">
	<tr class="active">
		<th>Item</th>
		<th>Quantity</th>
		<th>Price</th>
	</tr>
	<% @order.order_items.each do |item| %>
	<tr>
		<td><%= item.order_item_title %></td> 
		<td><%= item.quantity_order %></td> 
		<td><%= item.order_item_price %></td> 	
 	</tr>
 	<% end%>

 	<td></td>
 	<td></td>
 	<td><strong>$</strong><%= @order.total_price %></td>
</table>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
      <%= hidden_field_tag :amount ,value: @order.total_price %>
    <% end %>
    <label class="amount">
      <span>Amount: <%= @order.total_price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount=""
          data-locale="auto"></script>
<% end %>