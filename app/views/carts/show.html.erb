<h1 class="custom_h1">My current cart </h1>

<table class="table table-striped">
	<tr class="active">
		<th>Item</th>
		<th>Quantity</th>
		<th>Price</th>
	</tr>
	<% @cart.order_items.each do |item| %>
	<tr>
		<td><%= item.order_item_title %></td> 
		<td><%= item.quantity_order %></td> 
		<td><%= item.order_item_price %></td> 	
 	</tr>
 	<% end%>
 	
 	<td></td>
 	<td></td>
 	<td><strong>$</strong><%= Total_price(@cart.order_items).round(2) %></td>
</table>
		<%= form_for(:order, :url => orders_path,:html => {class: "form-horizontal", role: "form"}) do |f| %>
		<%= f.hidden_field :total_price, value: Total_price(@cart.order_items).round(2), class: "form-control", placeholder: "Price of item" %>
		<%= f.submit "Order", class: "btn btn-primary btn-lg" %>
		<% end%>
	</div>


