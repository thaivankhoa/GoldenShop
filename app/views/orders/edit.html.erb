<h1 class="custom_h1">Your Order</h1>

<div align="center">
    <%= form_for(:order, :url => order_path(@order),method: :put, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <%= f.select :status, options_for_select(["New","Done"], @order.status) %>
      <%= f.submit "Update status", class: "btn btn-primary"  %>
    <% end%>
</div>
</br>

<table class="table table-striped">
  <tr class="active">
    <th>Item</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <% @order.order_items.each do |item| %>
  <tr>
    <td><%= item.order_item_title %></td> 
    <td><%= item.quantity_order %></td> 
    <td><%= item.order_item_price %></td>   
  </tr>
  <% end%>

  <td></td>
  <td></td>
  <td><strong>$</strong><%= @order.total_price %></td>
</table>

