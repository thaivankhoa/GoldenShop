<h1 class="custom_h1">My current cart </h1>

<table class="table table-striped">
	<tr class="active">
		<th>Item</th>
		<th>Quantity</th>
		<th>Price</th>
	</tr>
	<% @cart.order_items.each do |item| %>
	<tr>
		<td><%= item.order_item_title %></td> 
		<td><%= item.quantity_order %></td> 
		<td><%= item.order_item_price %></td> 	
 	</tr>
 	<% end%>
</table>
